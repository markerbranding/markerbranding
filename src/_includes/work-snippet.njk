<li class="type__{{ work.data.category }}" data-speed="1.2">
    <a href="{{ work.url }}" class="snippet">
        <div class="work__img__wrappper">
            <img src="{{ work.data.thumbnail }}" alt="{{ work.data.description }}" class="snippet__image" />
        </div>
        <div class="snippet__description">
            <div class="snippet__title__wrapper">
                <h2 class="snippet__title">{{ work.data.title }}</h2>
                <div class="underline__title"></div>
            </div>
            <p class="snippet__body">{{ work.data.description }}</p>
            <div class="snippet__services">
                {%- for service in work.data.services -%}
                    <span>{{ service }}</span>
                {%- endfor -%}
            </div>
        </div>
    </a>
</li>